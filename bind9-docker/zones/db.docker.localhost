$TTL 600      
@       IN      SOA     localhost. root.localhost. (
                    4         ; Serial (increment this number for each change)
                    604800    ; Refresh (1 week)
                    86400     ; Retry (1 day)
                    2419200   ; Expire (4 weeks)
                    600 )     ; Negative Cache TTL (10 minutes)

        IN      NS      localhost. ; Name Server
@       IN      A       172.20.10.8    ; docker.localhost   -> 172.20.10.8
*       IN      A       172.20.10.8    ; *.docker.localhost -> 172.20.10.8
@       IN      A       192.168.6.222  ; docker.localhost   -> 192.168.6.222
*       IN      A       192.168.6.222  ; *.docker.localhost -> 192.168.6.222
@       IN      A       192.168.80.1  ; docker.localhost   -> 192.168.80.1
*       IN      A       192.168.80.1  ; *.docker.localhost -> 192.168.80.1